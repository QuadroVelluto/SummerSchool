# Makefile
# Использование:
#   make           # собрать
#   sudo ./server <iface> <server_ip> <server_port>
#   sudo ./client <iface> <server_ip> <server_port>

CC = gcc
CFLAGS = -O2 -Wall -Wextra

all: server client

server: server.c
	$(CC) $(CFLAGS) -o server server.c

client: client.c
	$(CC) $(CFLAGS) -o client client.c

clean:
	rm -f server client
